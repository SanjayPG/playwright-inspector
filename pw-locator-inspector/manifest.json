{
  "name": "Playwright Locator Pro",
  "version": "4.2.0",
  "manifest_version": 3,
  "description": "Professional Playwright locator generation and validation in DevTools",
  "permissions": ["activeTab", "storage", "tabs", "contextMenus"],
  "devtools_page": "devtools/devtools.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content-scripts/main.js"],
    "css": ["content-scripts/style.css"],
    "run_at": "document_idle"
  }]
}